# ============================================================
# Focus Habit Launcher - Frontend Environment Variables
# ============================================================
# Copy this file to .env.local for local development

# Backend API Base URL
# - Development: Leave empty to use proxy (localhost:8080)
# - Production: Set full backend URL (e.g., https://api.example.com)
NEXT_PUBLIC_API_BASE_URL=

# Mock Mode (use localStorage instead of API)
# true: No backend needed
# false: Requires backend API
NEXT_PUBLIC_API_MOCK=false

# Environment name
NEXT_PUBLIC_ENV=development
